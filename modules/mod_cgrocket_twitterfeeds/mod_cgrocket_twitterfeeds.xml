			Copyright 2011 - 2012 <a target="_blank" href="http://www.cgrocket.com">http://www.cgrocket.com</a>	
		</div>
	]]>	
	</description>
	<files>
		<filename module="mod_cgrocket_twitterfeeds">mod_cgrocket_twitterfeeds.php</filename>
		<folder>tmpl</folder>
		<folder module="mod_cgrocket_twitterfeeds">admin</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_cgrocket_twitterfeeds.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset
				name="Settings" label="MOD_CGROCKET_TWITTERFEEDS_SETTINGS">
				<field
					name="username"
					type="text"
					default="cgrocket"
					label="MOD_CGROCKET_TWITTERFEEDS_USERNAME_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_USERNAME_DESC">
				</field>
				<field
					name="number_of_tweets"
					type="text"
					default="10"
					label="MOD_CGROCKET_TWITTERFEEDS_NUMBER_TWEET_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_NUMBER_TWEET_DESC">			
				</field>
				<field
					name="width"
					type="text"
					default="auto"
					label="MOD_CGROCKET_TWITTERFEEDS_WIDTH_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_WIDTH_DESC">
				</field>
				<field
					name="height"
					type="text"
					default="300"
					label="MOD_CGROCKET_TWITTERFEEDS_HEIGHT_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_HEIGHT_DESC">
				</field>
			</fieldset>
			<fieldset name="Preferences" label="MOD_CGROCKET_TWITTERFEEDS_PREFERENCES">
				<field
					name="poll_new"
					type="list"
					default="true"
					class="cgrocket_switch"
					label="MOD_CGROCKET_TWITTERFEEDS_POLL_NEW_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_POLL_NEW_DESC">
					<option
						value="true">Yes</option>
					<option
						value="false">No</option>
				</field>
				<field
					name="scrollbar"
					type="list"
					class="cgrocket_switch"
					default="true"
					label="MOD_CGROCKET_TWITTERFEEDS_SCROLLBAR_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_SCROLLBAR_DESC">
					<option
						value="true">Yes</option>
					<option
						value="false">No</option>
			
				</field>
				
				<field
					name="show_avatar"
					type="list"
					class="cgrocket_switch"
					default="true"
					label="MOD_CGROCKET_TWITTERFEEDS_SHOW_AVATAR_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_SHOW_AVATAR_DESC">
					<option
						value="true">Yes</option>
					<option
						value="false">No</option>
			
				</field>
				<field
					name="show_timestamp"
					type="list"
					class="cgrocket_switch"
					default="true"
					label="MOD_CGROCKET_TWITTERFEEDS_SHOW_TIMESTAMP_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_SHOW_TIMESTAMP_DESC">
					<option
						value="true">Yes</option>
					<option
						value="false">No</option>
			
				</field>
				<field
					name="show_hastag"
					type="list"
					class="cgrocket_switch"
					default="true"
					label="MOD_CGROCKET_TWITTERFEEDS_SHOW_HASTAG_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_SHOW_HASTAG_LABEL">
					<option
						value="true">Yes</option>
					<option
						value="false">No</option>
			
				</field>
			</fieldset>
			<fieldset name="Appearance"  label="MOD_CGROCKET_TWITTERFEEDS_APPEARANCE">
				<field
					name="shell_background_color"
					type="text"
					class="cgrocket_color"
					default="#666666"
					label="MOD_CGROCKET_TWITTERFEEDS_SHELLBG_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_SHELLBG_DESC">
				</field>
				<field
					name="shell_text_color"
					type="text"
					class="cgrocket_color"
					default="#ffffff"
					label="MOD_CGROCKET_TWITTERFEEDS_SHELLTEXTCOLOR_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_SHELLTEXTCOLOR_DESC">
				</field>
				<field
					name="tweet_background_color"
					type="text"
					default="#ffffff"
					class="cgrocket_color"
					label="MOD_CGROCKET_TWITTERFEEDS_TWEETBG_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_TWEETBG_DESC">
				</field>
				<field
					name="tweet_text_color"
					type="text"
					default="#333333"
					class="cgrocket_color"
					label="MOD_CGROCKET_TWITTERFEEDS_TWEETTEXT_COLOR_LABEL"
					description="MOD_CGROCKET_TWITTERFEEDS_TWEETTEXT_COLOR_DESC">
				</field>
				<field
					name="link_color"
					type="text"
					class="cgrocket_color"
					default="#095197"			
					label="Link color"
					description="Link color">
				</field>
			
			</fieldset>
	
			<fieldset
				name="advanced">


				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
				
			</fieldset>
			<fieldset addfieldpath="/modules/mod_cgrocket_twitterfeeds/admin/formfield"
				name="about" label="CGROCKET_ABOUT">
				<field type="asset" name="asset" path="modules/mod_cgrocket_twitterfeeds/admin/" />
				<field type="about" name="about"  path="modules/mod_cgrocket_twitterfeeds/admin/images"  />
			</fieldset>
		</fields>
	</config>
</extension>
